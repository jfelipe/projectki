<p class="pull-sm-right">
  {{#link-to "contacts.new" class="btn btn-primary"}}Add Contact{{/link-to}}
</p>
<h2>Contacts</h2>
<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Family name</th>
      <th>Given names</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Company</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |contact|}}
      <tr>
        <td>{{contact.familyName}}</td>
        <td>{{contact.givenNames}}</td>
        <td>{{contact.phone}}</td>
        <td>{{contact.email}}</td>
        <td>{{contact.company.name}}</td>
        <td>
          {{#link-to 'contacts.show' contact}}Details{{/link-to}} |
          {{#link-to 'contacts.edit' contact}}Edit{{/link-to}}
        </td>
      </tr>
    {{else}}
      <tr>
        <td colspan="5" style="text-align: center; font-style:italic;">
          You have no contacts yet.
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
